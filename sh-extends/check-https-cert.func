#!/bin/bash
function check-https-cert() {
    local host=$1
    local port=$2
    if [ -z "$host" ]; then
        echo "host is empty"
        return 1
    fi
    if [ -z "$port" ]; then
        port=443
    fi
    openssl s_client -connect $host:$port </dev/null | openssl x509 -noout -issuer -subject -dates
}
