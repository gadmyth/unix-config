!for hhkb
remove Mod1 = Alt_L
remove Lock = Caps_Lock
remove Control = Control_L
remove Mod4 = Hyper_L

! origin Break (keycode = 127)
keycode 127 = Caps_Lock
add Lock = Caps_Lock

! origin Caps_Lock (keycode = 66)
keycode 66 = Alt_L
add Mod1 = Alt_L

! origin Alt_L (keycode = 64)
keycode 64 = Control_L
add Control = Control_L

! origin Control_L (keycode = 37)
keycode 37 = Hyper_L
add Mod3 = Hyper_L

