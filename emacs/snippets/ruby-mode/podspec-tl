# -*- mode: snippet -*-
# name: podspec-tl
# key: podspec-tl
# --
Pod::Spec.new do |s|
 s.name = "$1"
 s.version = "${2:0.1.1}"
 s.summary = "${3:A short description of ${4:MyPodDemo} pod.}"
 s.description = <<-DESC
 A longer description of MyPodDemo in Markdown format.
 * Think: Why did you write this? What is the focus? What does it do?
 * CocoaPods will be using this to generate tags, and improve search results.
 * Try to keep it short, snappy and to the point.
 * Finally, don't worry about the indent, CocoaPods strips it!
 DESC
 s.homepage = "$5"
 s.license = {
    :type => 'Copyright',
    :text => <<-LICENSE
      Copyright 2016 ${6:Company} All rights reserved.
      LICENSE
  }
 s.author = { "${9:author's name}" => "${10:author's email}" }

 s.source = { :git => "${11:<git-repo>}", :tag => "$12" }
 s.source_files = ''
 s.public_header_files = '${15:<Umbrella Header File>}'
 s.requires_arc = true
 s.platform     = :ios, '7.0'

 #s.dependency 'AFNetworking', '~> 3.1.0'

=begin
 s.subspec 'subspec' do |ss|
    ss.source_files = 'MyClasses/subspec/**/*.{h,m}'
    ss.public_header_files = 'MyClasses/subspec/**/*.h'
 end
=end

