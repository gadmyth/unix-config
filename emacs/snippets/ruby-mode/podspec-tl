 # s.library = "iconv"
 # s.libraries = "iconv", "xml2"
 #s.preserve_paths = 'MyClasses/Preserve-Library/**/*.*'
 #s.vendored_libraries = 'MyClasses/Preserve-Library/xxxxxx.a'
end
